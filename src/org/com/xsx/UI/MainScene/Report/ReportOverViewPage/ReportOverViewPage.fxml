                        </GridPane>
                     </children>
                     <VBox.margin>
                        <Insets left="20.0" right="20.0" />
                     </VBox.margin>
                  </GridPane>
                  <BarChart fx:id="GB_ReportDetailBarChart" prefHeight="500.0">
                    <xAxis>
                      <CategoryAxis fx:id="GB_ReportDetailBarChartX" side="BOTTOM" />
                    </xAxis>
                    <yAxis>
                      <NumberAxis fx:id="GB_ReportDetailBarChartY" side="LEFT" />
                    </yAxis>
                     <VBox.margin>
                        <Insets bottom="100.0" />
                     </VBox.margin>
                  </BarChart>
               </children>
               <padding>
                  <Insets bottom="100.0" top="30.0" />
               </padding>
