                              <Button mnemonicParsing="false" prefHeight="35.0" prefWidth="70.0" style="-fx-background-color: #8080C0;" text="查询" />
                           </children>
                           <padding>
                              <Insets left="20.0" />
                           </padding>
                        </HBox>
