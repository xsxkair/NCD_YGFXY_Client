                                          <TextField fx:id="GB_YearTextField" prefWidth="100.0" promptText="YYYY" />
                                          <Label text="年" />
                                       </children>
                                    </HBox>
                                    <HBox alignment="CENTER" spacing="5.0">
                                       <children>
                                          <ComboBox fx:id="GB_MonthComboBox" editable="true" prefWidth="100.0" />
